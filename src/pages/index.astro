<!doctype html>
<html lang="de">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      /* â”€â”€ tokens â”€â”€ */
      :root {
        --accent:   #2962a3;
        --accent-h: #1e4d8c;
        --accent-l: #e8f0fb;
        --text:     #1a202c;
        --muted:    #64748b;
        --border:   #e2e8f0;
        --bg:       #ffffff;
        --bg-alt:   #f8fafc;
        --radius:   12px;
        --sans: 'Source Sans 3', system-ui, sans-serif;
        --serif: 'Source Serif 4', Georgia, serif;
      }

      @import url('https://fonts.googleapis.com/css2?family=Source+Serif+4:ital,wght@0,300;0,400;0,600;1,400&family=Source+Sans+3:wght@300;400;500;600&display=swap');

      /* â”€â”€ reset â”€â”€ */
      *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }
      html { scroll-behavior: smooth; }
      body { font-family: var(--sans); color: var(--text); background: var(--bg); -webkit-font-smoothing: antialiased; }
      a { color: var(--accent); text-decoration: none; }
      a:hover { text-decoration: underline; }

      /* â”€â”€ page wrapper â”€â”€ */
      .cv-wrap {
        max-width: 860px;
        margin: 0 auto;
        padding: 3rem 1.5rem 5rem;
      }

      /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         HERO  (photo + intro)
      â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
      .hero {
        display: flex;
        align-items: center;
        gap: 2.8rem;
        padding: 2.5rem 2.5rem;
        background: var(--bg-alt);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        margin-bottom: 2.5rem;
        position: relative;
        overflow: hidden;
      }

      /* subtle grid texture */
      .hero::before {
        content: '';
        position: absolute; inset: 0;
        background-image: radial-gradient(var(--border) 1px, transparent 1px);
        background-size: 22px 22px;
        opacity: .5;
        pointer-events: none;
      }

      /* â”€â”€ avatar bubble â”€â”€ */
      .avatar-bubble {
        flex-shrink: 0;
        width: 150px; height: 150px;
        border-radius: 50%;
        border: 4px solid var(--bg);
        box-shadow: 0 0 0 3px var(--accent), 0 8px 32px rgba(41,98,163,.2);
        overflow: hidden;
        background: var(--accent-l);
        display: flex; align-items: center; justify-content: center;
        position: relative; z-index: 1;
        transition: box-shadow .3s ease, transform .3s ease;
      }
      .avatar-bubble:hover {
        transform: translateY(-3px) scale(1.02);
        box-shadow: 0 0 0 3px var(--accent), 0 14px 40px rgba(41,98,163,.28);
      }
      .avatar-bubble img {
        width: 100%; height: 100%; object-fit: cover;
      }
      .avatar-fallback {
        font-size: 3.8rem; line-height: 1;
      }

      /* â”€â”€ hero text â”€â”€ */
      .hero-text { position: relative; z-index: 1; }

      .hero-name {
        font-family: var(--serif);
        font-size: clamp(1.7rem, 4vw, 2.2rem);
        font-weight: 600;
        color: var(--text);
        line-height: 1.15;
        margin-bottom: .35rem;
      }

      .hero-role {
        font-size: 1rem;
        color: var(--accent);
        font-weight: 500;
        margin-bottom: .15rem;
      }

      .hero-affil {
        font-size: .88rem;
        color: var(--muted);
        font-style: italic;
        margin-bottom: 1rem;
      }

      .hero-bio {
        font-size: .95rem;
        color: var(--muted);
        line-height: 1.75;
        margin-bottom: 1.3rem;
        font-weight: 300;
        max-width: 520px;
      }

      .hero-socials {
        display: flex; flex-wrap: wrap; gap: .5rem;
      }

      .social-pill {
        display: inline-flex; align-items: center; gap: .35rem;
        font-size: .78rem; font-weight: 500;
        padding: .35rem .85rem;
        border-radius: 99px;
        border: 1px solid var(--border);
        background: var(--bg);
        color: var(--muted);
        text-decoration: none;
        transition: border-color .2s, color .2s, background .2s, transform .15s;
      }
      .social-pill:hover {
        border-color: var(--accent);
        color: var(--accent);
        background: var(--accent-l);
        transform: translateY(-1px);
        text-decoration: none;
      }
      .social-pill svg { flex-shrink: 0; }

      /* â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
         SECTION layout
      â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• */
      .cv-section { margin-bottom: 2rem; }

      .section-hdr {
        display: flex; align-items: center; gap: .6rem;
        margin-bottom: 1.2rem;
        padding-bottom: .75rem;
        border-bottom: 2px solid var(--border);
      }
      .section-icon {
        width: 30px; height: 30px;
        background: var(--accent-l);
        border-radius: 7px;
        display: flex; align-items: center; justify-content: center;
        color: var(--accent); flex-shrink: 0;
      }
      .section-title {
        font-family: var(--serif);
        font-size: 1.25rem; font-weight: 600;
        color: var(--text); letter-spacing: -.01em;
      }

      /* two-column grid for about details */
      .two-col { display: grid; grid-template-columns: 1fr 1fr; gap: 1.5rem; }

      .col-label {
        font-size: .68rem; font-weight: 600; letter-spacing: .12em;
        text-transform: uppercase; color: var(--muted); margin-bottom: .7rem;
      }

      .interest-item {
        display: flex; align-items: center; gap: .45rem;
        font-size: .88rem; color: var(--text); margin-bottom: .4rem;
      }
      .interest-item::before {
        content: ''; width: 6px; height: 6px;
        border-radius: 50%; background: var(--accent); flex-shrink: 0;
      }

      .edu-row {
        display: flex; align-items: flex-start; gap: .65rem; margin-bottom: .7rem;
      }
      .edu-dot {
        margin-top: 5px; width: 10px; height: 10px; border-radius: 50%;
        background: var(--accent); flex-shrink: 0;
      }
      .edu-degree { font-size: .9rem; font-weight: 600; color: var(--text); line-height: 1.3; }
      .edu-school  { font-size: .8rem; color: var(--muted); }

      /* â”€â”€ timeline â”€â”€ */
      .timeline { position: relative; padding-left: 1.6rem; }
      .timeline::before {
        content: ''; position: absolute; left: 5px; top: 8px; bottom: 0;
        width: 2px; background: var(--border);
      }
      .tl-item { position: relative; margin-bottom: 1.6rem; }
      .tl-item:last-child { margin-bottom: 0; }
      .tl-item::before {
        content: ''; position: absolute; left: -1.35rem; top: 6px;
        width: 11px; height: 11px; border-radius: 50%;
        background: var(--accent); border: 2px solid #fff;
        box-shadow: 0 0 0 2px var(--border);
      }
      .tl-date  { font-size: .75rem; font-weight: 600; color: var(--accent); letter-spacing: .06em; text-transform: uppercase; margin-bottom: .2rem; }
      .tl-title { font-size: .97rem; font-weight: 600; color: var(--text); margin-bottom: .1rem; }
      .tl-place { font-size: .85rem; color: var(--muted); font-style: italic; margin-bottom: .4rem; }
      .tl-desc  { font-size: .85rem; color: var(--muted); line-height: 1.65; }

      /* â”€â”€ publication cards â”€â”€ */
      .pub-list { display: flex; flex-direction: column; gap: 1rem; }
      .pub-card {
        padding: 1.2rem 1.4rem;
        border: 1px solid var(--border);
        border-radius: var(--radius);
        background: var(--bg);
        box-shadow: 0 1px 3px rgba(0,0,0,.06);
        transition: box-shadow .2s, transform .2s;
      }
      .pub-card:hover { box-shadow: 0 4px 16px rgba(0,0,0,.1); transform: translateY(-1px); }
      .pub-badge {
        display: inline-block; font-size: .65rem; font-weight: 600;
        letter-spacing: .1em; text-transform: uppercase;
        padding: .15rem .5rem; border-radius: 4px;
        background: var(--accent-l); color: var(--accent);
        margin-bottom: .55rem;
      }
      .pub-title   { font-family: var(--serif); font-size: 1rem; font-weight: 600; color: var(--text); margin-bottom: .3rem; line-height: 1.35; }
      .pub-authors { font-size: .82rem; color: var(--muted); margin-bottom: .2rem; }
      .pub-venue   { font-size: .82rem; color: var(--muted); font-style: italic; margin-bottom: .7rem; }
      .pub-links   { display: flex; gap: .4rem; flex-wrap: wrap; }
      .pub-btn {
        display: inline-flex; align-items: center; gap: .25rem;
        font-size: .72rem; font-weight: 600; padding: .25rem .65rem;
        border-radius: 5px; border: 1px solid var(--border);
        color: var(--muted); background: var(--bg-alt);
        text-decoration: none; transition: .18s;
      }
      .pub-btn:hover { border-color: var(--accent); color: var(--accent); background: var(--accent-l); text-decoration: none; }
      .pub-btn.primary { background: var(--accent); color: #fff; border-color: var(--accent); }
      .pub-btn.primary:hover { background: var(--accent-h); }

      /* â”€â”€ skills â”€â”€ */
      .skill-groups { display: flex; flex-direction: column; gap: 1rem; }
      .skill-label { font-size: .68rem; font-weight: 600; letter-spacing: .12em; text-transform: uppercase; color: var(--muted); margin-bottom: .6rem; }
      .skill-tags  { display: flex; flex-wrap: wrap; gap: .4rem; }
      .s-tag {
        font-size: .83rem; padding: .35rem .8rem;
        border-radius: 99px; border: 1px solid var(--border);
        background: var(--bg-alt); color: var(--text);
        transition: border-color .18s, background .18s, color .18s;
      }
      .s-tag:hover { border-color: var(--accent); background: var(--accent-l); color: var(--accent); }

      /* â”€â”€ responsive â”€â”€ */
      @media (max-width: 640px) {
        .hero { flex-direction: column; text-align: center; gap: 1.5rem; padding: 2rem 1.5rem; }
        .hero-bio { max-width: 100%; }
        .hero-socials { justify-content: center; }
        .two-col { grid-template-columns: 1fr; }
        .cv-wrap { padding: 1.5rem 1rem 4rem; }
      }
    </style>
  </head>
