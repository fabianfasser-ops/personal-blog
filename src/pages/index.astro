---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />
    <main class="landing">
      <section class="hero">
        <img src="/your-photo.jpg" alt="Portrait of Fabian Fasser" class="hero-img" />

        <h1 class="hero-name">Fabian Fasser</h1>
        <p class="hero-title">Solutions Engineer</p>

        <blockquote class="hero-quote">
          “Technology should feel simple, human, and purposeful — great solutions start with understanding people.”
        </blockquote>
      </section>
    </main>

    <Footer />
  </body>
</html>

<style>
  :root {
    --text: #111;
    --muted: #666;
    --border: #e5e5e5;
    --bg: #fafafa;
  }

  body {
    background: var(--bg);
    color: var(--text);
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  .landing {
    min-height: calc(100vh - 140px);
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem 1rem;
  }

  .hero {
    max-width: 640px;
    text-align: center;
    padding: 3rem 2rem;
    background: white;
    border-radius: 18px;
    border: 1px solid var(--border);
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  }

  .hero-img {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1.5rem;
    border: 2px solid var(--border);
  }

  .hero-name {
    font-size: clamp(2rem, 4vw, 2.6rem);
    margin: 0;
    font-weight: 600;
    letter-spacing: 0.3px;
  }

  .hero-title {
    margin-top: 0.4rem;
    color: var(--muted);
    font-size: 1.15rem;
  }

  .hero-quote {
    margin-top: 2rem;
    font-size: 1.2rem;
    line-height: 1.7;
    color: #333;
    font-style: italic;
    position: relative;
    padding: 0 1rem;
  }

  .hero-quote::before {
    content: "\201C";
    font-size: 3rem;
    position: absolute;
    left: -0.5rem;
    top: -1rem;
    color: #ddd;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --text: #f5f5f5;
      --muted: #aaa;
      --border: #2a2a2a;
      --bg: #0f0f0f;
    }

    .hero {
      background: #151515;
      box-shadow: 0 10px 30px rgba(0,0,0,0.4);
    }

    .hero-quote::before {
      color: #333;
    }
  }
</style>

