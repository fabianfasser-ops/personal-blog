---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>

  <body>
    <Header />

    <main class="landing">
      <div class="hero">
        <img src="/your-photo.jpg" alt="Portrait of Fabian Fasser" class="hero-img" />

        <h1 class="hero-name">Fabian Fasser</h1>
        <p class="hero-title">Software Engineer</p>

        <p class="hero-text">
          I build modern, scalable web applications with a focus on clean architecture,
          automation, and developer experience.
        </p>

        <div class="hero-links">
          <a href="/cv" class="btn">View CV</a>
          <a href="/projects" class="btn">Projects</a>
          <a href="/contact" class="btn">Contact</a>
        </div>
      </div>
    </main>

    <Footer />
  </body>
</html>

