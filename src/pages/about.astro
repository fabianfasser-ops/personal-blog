<style>
  /* â”€â”€ Tokens â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  :root {
    --cream:      #f7f5f0;
    --ink:        #1a1814;
    --muted:      #7a7672;
    --accent:     #c8540a;
    --border:     rgba(26,24,20,.1);
    --radius:     6px;
    --ff-display: 'Cormorant Garamond', Georgia, serif;
    --ff-body:    'DM Sans', system-ui, sans-serif;
  }

  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

  body {
    background: var(--cream);
    color: var(--ink);
    font-family: var(--ff-body);
    font-size: 15px;
    line-height: 1.7;
    -webkit-font-smoothing: antialiased;
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
  }

  main {
    flex: 1;
    width: 100%;
    padding-top: 56px; /* fixed header offset */
  }

  /* â”€â”€ Reveal animation â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(16px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  .reveal {
    opacity: 0;
    animation: fadeUp .65s cubic-bezier(.22,.68,0,1.2) forwards;
    animation-delay: var(--delay, 0s);
  }

  /* â”€â”€ Hero â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .about-hero {
    border-bottom: 1px solid var(--border);
    padding: 4rem 2rem 3rem;
  }

  .about-hero-inner {
    max-width: 720px;
    margin: 0 auto;
  }

  .label {
    font-size: .7rem;
    font-weight: 500;
    letter-spacing: .18em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 1rem;
  }

  .about-name {
    font-family: var(--ff-display);
    font-size: clamp(2.8rem, 7vw, 4.5rem);
    font-weight: 300;
    line-height: 1.05;
    letter-spacing: .01em;
    margin-bottom: 1.2rem;
  }

  .about-role {
    display: inline-flex;
    align-items: center;
    gap: .5rem;
    font-size: .78rem;
    font-weight: 500;
    letter-spacing: .12em;
    text-transform: uppercase;
    color: var(--muted);
  }

  .dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--accent);
    flex-shrink: 0;
    animation: pulse 2.4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50%       { opacity: .4; transform: scale(.7); }
  }

  /* â”€â”€ Content layout â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .about-content {
    max-width: 720px;
    margin: 0 auto;
    padding: 3rem 2rem 5rem;
  }

  /* â”€â”€ Block â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .block {
    display: grid;
    grid-template-columns: 140px 1fr;
    gap: 0 2.5rem;
    align-items: start;
  }

  .block-label {
    font-size: .68rem;
    font-weight: 500;
    letter-spacing: .15em;
    text-transform: uppercase;
    color: var(--muted);
    padding-top: .2rem;
    white-space: nowrap;
  }

  .block-body p {
    color: var(--ink);
    margin-bottom: 1rem;
  }

  .block-body p:last-child {
    margin-bottom: 0;
  }

  /* â”€â”€ Divider â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .divider {
    width: 100%;
    height: 1px;
    background: var(--border);
    margin: 2.2rem 0;
  }

  /* â”€â”€ Education items â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .edu-item {
    display: flex;
    align-items: baseline;
    gap: .75rem;
    margin-bottom: .6rem;
  }

  .edu-degree {
    font-weight: 500;
    font-size: .9rem;
    color: var(--ink);
    white-space: nowrap;
  }

  .edu-school {
    font-size: .8rem;
    color: var(--muted);
  }

  .edu-note {
    margin-top: 1rem !important;
    font-size: .88rem;
    color: var(--muted);
    font-style: italic;
  }

  /* â”€â”€ Blockquote â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  blockquote {
    font-family: var(--ff-display);
    font-size: clamp(1.3rem, 3vw, 1.65rem);
    font-weight: 300;
    font-style: italic;
    line-height: 1.4;
    color: var(--ink);
    border-left: 2px solid var(--accent);
    padding-left: 1.25rem;
    margin-bottom: 1rem;
  }

  /* â”€â”€ Interests â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .interests {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: .75rem 1.5rem;
  }

  .interest {
    display: flex;
    align-items: center;
    gap: .6rem;
    font-size: .88rem;
    color: var(--ink);
  }

  .interest-icon {
    font-size: 1rem;
    line-height: 1;
  }

  /* â”€â”€ CTA â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .cta-row {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    flex-wrap: wrap;
  }

  .cta {
    display: inline-flex;
    align-items: center;
    gap: .5rem;
    text-decoration: none;
    font-size: .8rem;
    font-weight: 500;
    letter-spacing: .1em;
    text-transform: uppercase;
    color: var(--cream);
    background: var(--ink);
    padding: .7rem 1.5rem;
    border-radius: var(--radius);
    transition: background .25s, transform .25s, box-shadow .25s;
    box-shadow: 0 2px 12px rgba(0,0,0,.1);
  }

  .cta:hover {
    background: var(--accent);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(200,84,10,.22);
  }

  .cta svg { transition: transform .25s; }
  .cta:hover svg { transform: translateX(3px); }

  .cta-ghost {
    font-size: .8rem;
    font-weight: 400;
    letter-spacing: .06em;
    color: var(--muted);
    text-decoration: none;
    border-bottom: 1px solid var(--border);
    padding-bottom: 1px;
    transition: color .2s, border-color .2s;
  }

  .cta-ghost:hover {
    color: var(--ink);
    border-color: var(--ink);
  }

  /* â”€â”€ Explore cards â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .explore-row {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .explore-label {
    font-size: .68rem;
    font-weight: 500;
    letter-spacing: .15em;
    text-transform: uppercase;
    color: var(--muted);
  }

  .explore-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: .75rem;
  }

  .explore-card {
    display: flex;
    flex-direction: column;
    gap: .2rem;
    padding: 1rem 1.1rem;
    border: 1px solid var(--border);
    border-radius: var(--radius);
    text-decoration: none;
    color: var(--ink);
    position: relative;
    transition: border-color .2s, box-shadow .2s, transform .2s;
  }

  .explore-card svg {
    position: absolute;
    top: 1rem;
    right: 1rem;
    color: var(--muted);
    transition: transform .2s, color .2s;
  }

  .explore-card:hover {
    border-color: var(--accent);
    box-shadow: 0 4px 20px rgba(200,84,10,.08);
    transform: translateY(-2px);
  }

  .explore-card:hover svg {
    transform: translateX(3px);
    color: var(--accent);
  }

  .explore-card-title {
    font-size: .85rem;
    font-weight: 500;
    letter-spacing: .06em;
    text-transform: uppercase;
  }

  .explore-card-sub {
    font-size: .75rem;
    color: var(--muted);
  }

  /* â”€â”€ Responsive â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  @media (max-width: 600px) {
    .block {
      grid-template-columns: 1fr;
      gap: .5rem 0;
    }

    .block-label {
      color: var(--accent);
    }

    .interests {
      grid-template-columns: 1fr;
    }

    .about-hero { padding: 3rem 1.25rem 2rem; }
    .about-content { padding: 2.5rem 1.25rem 4rem; }
  }
</style>
