---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Work — ${SITE_TITLE}`} description="Professional experience of Fabian Fasser — Solutions Engineer at Cisco and beyond." />
  </head>
  <body>
    <Header />

    <main>
      <!-- Hero -->
      <section class="page-hero">
        <div class="page-hero-inner">
          <a href="/about" class="back-link">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" width="13" height="13">
              <path fill-rule="evenodd" d="M17 10a.75.75 0 01-.75.75H5.612l4.158 3.96a.75.75 0 11-1.04 1.08l-5.5-5.25a.75.75 0 010-1.08l5.5-5.25a.75.75 0 111.04 1.08L5.612 9.25H16.25A.75.75 0 0117 10z" clip-rule="evenodd"/>
            </svg>
            About
          </a>
          <div class="label reveal" style="--delay: 0.05s">Career</div>
          <h1 class="page-title reveal" style="--delay: 0.12s">Work Path</h1>
          <p class="page-sub reveal" style="--delay: 0.2s">7+ years across software, monitoring, and enterprise pre-sales.</p>
        </div>
      </section>

      <!-- Timeline -->
      <section class="timeline-section">
        <div class="timeline-inner">

          <!-- Cisco SE -->
          <div class="timeline-item reveal" style="--delay: 0.28s">
            <div class="timeline-meta">
              <span class="timeline-period">Aug 2024 — Present</span>
              <span class="timeline-location">Wallisellen, Switzerland</span>
            </div>
            <div class="timeline-content">
              <div class="timeline-dot accent"></div>
              <div class="timeline-body">
                <div class="timeline-header">
                  <h2 class="timeline-role">Solutions Engineer</h2>
                  <span class="timeline-company">Cisco Systems (Switzerland) GmbH</span>
                </div>
                <ul class="timeline-list">
                  <li>Leading pre-sales initiatives for Switzerland's three major Service Providers, focusing on Enterprise Networking and Security across Cisco's full technology portfolio.</li>
                  <li>Identified new opportunities and delivered technical presentations tailored to SP-specific requirements.</li>
                  <li>Organized a security workshop for 20+ attendees presenting Cisco's security vision and solutions.</li>
                  <li>Collaborated cross-functionally with Product Management and Engineering to streamline proof-of-concept deployments.</li>
                </ul>
                <div class="timeline-tags">
                  <span class="tag">Enterprise Networking</span>
                  <span class="tag">Security</span>
                  <span class="tag">Pre-Sales</span>
                  <span class="tag">Service Providers</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Cisco CSAP -->
          <div class="timeline-item reveal" style="--delay: 0.36s">
            <div class="timeline-meta">
              <span class="timeline-period">Aug 2023 — Jul 2024</span>
              <span class="timeline-location">Amsterdam, Netherlands</span>
            </div>
            <div class="timeline-content">
              <div class="timeline-dot"></div>
              <div class="timeline-body">
                <div class="timeline-header">
                  <h2 class="timeline-role">Associate Solutions Engineer</h2>
                  <span class="timeline-company">Cisco Systems International B.V.</span>
                </div>
                <ul class="timeline-list">
                  <li>Completed Cisco's one-year Sales Associate Program (CSAP), specializing in technical pre-sales and solution architecture.</li>
                  <li>Delivered technical presentations and live demos translating complex Cisco architectures into clear business value.</li>
                  <li>Built a web-based management platform for bandwidth consumption control per user as part of a DevNet project.</li>
                </ul>
                <div class="timeline-tags">
                  <span class="tag">CSAP</span>
                  <span class="tag">Solution Architecture</span>
                  <span class="tag">DevNet</span>
                </div>
              </div>
            </div>
          </div>

          <!-- inventx -->
          <div class="timeline-item reveal" style="--delay: 0.44s">
            <div class="timeline-meta">
              <span class="timeline-period">Jan 2018 — Jul 2023</span>
              <span class="timeline-location">Chur, Switzerland</span>
            </div>
            <div class="timeline-content">
              <div class="timeline-dot"></div>
              <div class="timeline-body">
                <div class="timeline-header">
                  <h2 class="timeline-role">System Engineer — Monitoring & Automation</h2>
                  <span class="timeline-company">inventx AG</span>
                </div>
                <ul class="timeline-list">
                  <li>Developed and implemented monitoring concepts for 10+ customers.</li>
                  <li>Consulted on logging, metrics, and tracing solutions to enhance observability and system performance.</li>
                  <li>Delivered proof-of-concepts and training for Dynatrace, Grafana, Zabbix, Loki, and OpsGenie.</li>
                </ul>
                <div class="timeline-tags">
                  <span class="tag">Grafana</span>
                  <span class="tag">Dynatrace</span>
                  <span class="tag">Zabbix</span>
                  <span class="tag">Automation</span>
                  <span class="tag">Ansible</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Trumpf Software -->
          <div class="timeline-item reveal" style="--delay: 0.52s">
            <div class="timeline-meta">
              <span class="timeline-period">Aug 2016 — Feb 2017</span>
              <span class="timeline-location">Grüsch, Switzerland</span>
            </div>
            <div class="timeline-content">
              <div class="timeline-dot"></div>
              <div class="timeline-body">
                <div class="timeline-header">
                  <h2 class="timeline-role">Software Engineer (part-time)</h2>
                  <span class="timeline-company">TRUMPF Laser Marking Systems AG</span>
                </div>
                <ul class="timeline-list">
                  <li>Developed and managed a software project using Scrum, C#, and Visual Studio.</li>
                </ul>
                <div class="timeline-tags">
                  <span class="tag">C#</span>
                  <span class="tag">Scrum</span>
                  <span class="tag">Visual Studio</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Trumpf Apprenticeship -->
          <div class="timeline-item reveal" style="--delay: 0.6s">
            <div class="timeline-meta">
              <span class="timeline-period">Aug 2012 — Jul 2016</span>
              <span class="timeline-location">Grüsch, Switzerland</span>
            </div>
            <div class="timeline-content">
              <div class="timeline-dot"></div>
              <div class="timeline-body">
                <div class="timeline-header">
                  <h2 class="timeline-role">Commercial Apprenticeship — Information Scientist EFZ</h2>
                  <span class="timeline-company">TRUMPF Grüsch AG</span>
                </div>
                <ul class="timeline-list">
                  <li>Hands-on experience setting up PCs, servers, and network infrastructure.</li>
                  <li>Worked with virtualization environments using Hyper-V, NetApp, and ESXi.</li>
                </ul>
                <div class="timeline-tags">
                  <span class="tag">Networking</span>
                  <span class="tag">Virtualization</span>
                  <span class="tag">Hyper-V</span>
                  <span class="tag">ESXi</span>
                </div>
              </div>
            </div>
          </div>

        </div>
      </section>

      <!-- Major project callout -->
      <section class="callout-section reveal" style="--delay: 0.68s">
        <div class="callout-inner">
          <span class="callout-label">Highlight</span>
          <p class="callout-text">Led the technical setup and network infrastructure for <strong>Cisco's presence at IBC</strong> — supporting 2 booths, 8 demo stands, a meeting room, and a stage for over 40,000 attendees.</p>
        </div>
      </section>

    </main>

    <Footer />
  </body>
</html>

<style>
  :root {
    --cream:      #f7f5f0;
    --ink:        #1a1814;
    --muted:      #7a7672;
    --accent:     #c8540a;
    --border:     rgba(26,24,20,.1);
    --radius:     6px;
    --ff-display: 'Cormorant Garamond', Georgia, serif;
    --ff-body:    'DM Sans', system-ui, sans-serif;
  }

  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

  body {
    background: var(--cream);
    color: var(--ink);
    font-family: var(--ff-body);
    font-size: 15px;
    line-height: 1.7;
    -webkit-font-smoothing: antialiased;
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
  }

  main {
    flex: 1;
    width: 100%;
    padding-top: 56px;
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(16px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  .reveal {
    opacity: 0;
    animation: fadeUp .65s cubic-bezier(.22,.68,0,1.2) forwards;
    animation-delay: var(--delay, 0s);
  }

  /* ── Hero ───────────────────────────────────── */
  .page-hero {
    border-bottom: 1px solid var(--border);
    padding: 3.5rem 2rem 2.5rem;
  }

  .page-hero-inner {
    max-width: 720px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: .4rem;
    font-size: .72rem;
    font-weight: 500;
    letter-spacing: .1em;
    text-transform: uppercase;
    color: var(--muted);
    text-decoration: none;
    margin-bottom: 1.5rem;
    transition: color .2s;
  }

  .back-link:hover { color: var(--ink); }

  .label {
    font-size: .7rem;
    font-weight: 500;
    letter-spacing: .18em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: .75rem;
  }

  .page-title {
    font-family: var(--ff-display);
    font-size: clamp(2.6rem, 7vw, 4rem);
    font-weight: 300;
    line-height: 1.05;
    margin-bottom: .9rem;
  }

  .page-sub {
    font-size: .9rem;
    color: var(--muted);
  }

  /* ── Timeline ───────────────────────────────── */
  .timeline-section {
    padding: 3rem 2rem 2rem;
  }

  .timeline-inner {
    max-width: 720px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .timeline-item {
    display: grid;
    grid-template-columns: 160px 1fr;
    gap: 0 2rem;
    position: relative;
    padding-bottom: 2.5rem;
  }

  /* Vertical line */
  .timeline-item::before {
    content: '';
    position: absolute;
    left: 160px;
    top: 8px;
    bottom: 0;
    width: 1px;
    background: var(--border);
    transform: translateX(calc(-50% + 1rem));
  }

  .timeline-item:last-child::before {
    display: none;
  }

  .timeline-meta {
    display: flex;
    flex-direction: column;
    gap: .2rem;
    text-align: right;
    padding-top: .1rem;
  }

  .timeline-period {
    font-size: .72rem;
    font-weight: 500;
    letter-spacing: .06em;
    color: var(--ink);
  }

  .timeline-location {
    font-size: .68rem;
    color: var(--muted);
  }

  .timeline-content {
    display: flex;
    gap: 1.25rem;
    align-items: flex-start;
  }

  .timeline-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--cream);
    border: 2px solid var(--border);
    flex-shrink: 0;
    margin-top: .35rem;
    transition: border-color .2s;
  }

  .timeline-dot.accent {
    background: var(--accent);
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(200,84,10,.12);
  }

  .timeline-body {
    flex: 1;
    padding-bottom: .5rem;
  }

  .timeline-header {
    margin-bottom: .75rem;
  }

  .timeline-role {
    font-size: 1rem;
    font-weight: 500;
    color: var(--ink);
    margin-bottom: .15rem;
  }

  .timeline-company {
    font-size: .78rem;
    color: var(--muted);
    letter-spacing: .04em;
  }

  .timeline-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: .45rem;
    margin-bottom: 1rem;
  }

  .timeline-list li {
    font-size: .88rem;
    color: var(--ink);
    padding-left: .9rem;
    position: relative;
    opacity: .85;
  }

  .timeline-list li::before {
    content: '–';
    position: absolute;
    left: 0;
    color: var(--muted);
  }

  .timeline-tags {
    display: flex;
    flex-wrap: wrap;
    gap: .35rem;
  }

  .tag {
    font-size: .66rem;
    font-weight: 400;
    letter-spacing: .07em;
    text-transform: uppercase;
    color: var(--muted);
    border: 1px solid var(--border);
    padding: .2rem .55rem;
    border-radius: 999px;
  }

  /* ── Callout ─────────────────────────────────── */
  .callout-section {
    padding: 0 2rem 4rem;
  }

  .callout-inner {
    max-width: 720px;
    margin: 0 auto;
    background: rgba(200,84,10,.05);
    border: 1px solid rgba(200,84,10,.2);
    border-radius: var(--radius);
    padding: 1.25rem 1.5rem;
    display: flex;
    gap: 1.25rem;
    align-items: flex-start;
  }

  .callout-label {
    font-size: .65rem;
    font-weight: 600;
    letter-spacing: .15em;
    text-transform: uppercase;
    color: var(--accent);
    white-space: nowrap;
    padding-top: .15rem;
  }

  .callout-text {
    font-size: .88rem;
    color: var(--ink);
    line-height: 1.6;
  }

  .callout-text strong {
    font-weight: 500;
  }

  /* ── Responsive ─────────────────────────────── */
  @media (max-width: 600px) {
    .timeline-item {
      grid-template-columns: 1fr;
    }

    .timeline-item::before {
      left: 0;
      top: 3.5rem;
      transform: translateX(4px);
    }

    .timeline-meta {
      text-align: left;
      flex-direction: row;
      gap: .5rem;
      align-items: center;
      margin-bottom: .75rem;
    }

    .page-hero { padding: 3rem 1.25rem 2rem; }
    .timeline-section { padding: 2.5rem 1.25rem 1.5rem; }
    .callout-section { padding: 0 1.25rem 3rem; }
  }
</style>
