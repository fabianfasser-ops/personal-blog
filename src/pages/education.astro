---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Education — ${SITE_TITLE}`} description="Education path of Fabian Fasser — MBA, BSc Business IT, and more." />
  </head>
  <body>
    <Header />

    <main>
      <!-- Hero -->
      <section class="page-hero">
        <div class="page-hero-inner">
          <a href="/about" class="back-link">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" width="13" height="13">
              <path fill-rule="evenodd" d="M17 10a.75.75 0 01-.75.75H5.612l4.158 3.96a.75.75 0 11-1.04 1.08l-5.5-5.25a.75.75 0 010-1.08l5.5-5.25a.75.75 0 111.04 1.08L5.612 9.25H16.25A.75.75 0 0117 10z" clip-rule="evenodd"/>
            </svg>
            About
          </a>
          <div class="label reveal" style="--delay: 0.05s">Academic</div>
          <h1 class="page-title reveal" style="--delay: 0.12s">Education</h1>
          <p class="page-sub reveal" style="--delay: 0.2s">Bridging technology and business strategy — from apprenticeship to MBA.</p>
        </div>
      </section>

      <!-- Timeline -->
      <section class="timeline-section">
        <div class="timeline-inner">

          <!-- MBA -->
          <div class="timeline-item reveal" style="--delay: 0.28s">
            <div class="timeline-meta">
              <span class="timeline-period">Sep 2025 — Mar 2027</span>
              <span class="timeline-location">Madrid, Spain</span>
            </div>
            <div class="timeline-content">
              <div class="timeline-dot accent"></div>
              <div class="timeline-body">
                <div class="timeline-badge">In Progress</div>
                <div class="timeline-header">
                  <h2 class="timeline-role">Global MBA</h2>
                  <span class="timeline-degree">Master's in Business Administration</span>
                  <span class="timeline-company">IE Business School</span>
                </div>
                <p class="timeline-desc">Deepening my ability to bridge technology leadership with business strategy. Recipient of the <em>High Achievers Scholarship</em>.</p>
                <div class="timeline-tags">
                  <span class="tag">Strategy</span>
                  <span class="tag">Leadership</span>
                  <span class="tag">Business</span>
                  <span class="tag">Scholarship</span>
                </div>
              </div>
            </div>
          </div>

          <!-- BSc -->
          <div class="timeline-item reveal" style="--delay: 0.38s">
            <div class="timeline-meta">
              <span class="timeline-period">Sep 2019 — Jul 2023</span>
              <span class="timeline-location">Rotkreuz, Switzerland</span>
            </div>
            <div class="timeline-content">
              <div class="timeline-dot"></div>
              <div class="timeline-body">
                <div class="timeline-header">
                  <h2 class="timeline-role">Bachelor of Science</h2>
                  <span class="timeline-degree">Business Information Technology</span>
                  <span class="timeline-company">Lucerne University of Applied Sciences and Arts (HSLU)</span>
                </div>
                <p class="timeline-desc">Studied part-time while working full-time. Major in IT Operations and Security. Includes an international project experience at San José State University in California, working as a web developer for NeuroLeap Corp.</p>
                <div class="timeline-tags">
                  <span class="tag">IT Operations</span>
                  <span class="tag">Security</span>
                  <span class="tag">Business IT</span>
                  <span class="tag">International</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Vocational Baccalaureate -->
          <div class="timeline-item reveal" style="--delay: 0.48s">
            <div class="timeline-meta">
              <span class="timeline-period">Aug 2013 — Aug 2017</span>
              <span class="timeline-location">Chur, Switzerland</span>
            </div>
            <div class="timeline-content">
              <div class="timeline-dot"></div>
              <div class="timeline-body">
                <div class="timeline-header">
                  <h2 class="timeline-role">Commercial Apprenticeship — Information Scientist EFZ</h2>
                  <span class="timeline-degree">with Technical Vocational Baccalaureate</span>
                  <span class="timeline-company">Gewerbliche Berufsschule Chur</span>
                </div>
                <p class="timeline-desc">Foundation in computer science, networking, and business processes — combined with a technical vocational baccalaureate enabling further academic study.</p>
                <div class="timeline-tags">
                  <span class="tag">Computer Science</span>
                  <span class="tag">Networking</span>
                  <span class="tag">Business Processes</span>
                </div>
              </div>
            </div>
          </div>

        </div>
      </section>

      <!-- Certifications -->
      <section class="certs-section">
        <div class="certs-inner">
          <div class="section-label reveal" style="--delay: 0.56s">Certifications</div>
          <div class="certs-grid">

            <div class="cert-item reveal" style="--delay: 0.62s">
              <span class="cert-date">Aug 2025</span>
              <div class="cert-body">
                <span class="cert-name">CCNP Security</span>
                <span class="cert-issuer">Cisco Certified Network Professional Security</span>
              </div>
            </div>

            <div class="cert-item reveal" style="--delay: 0.67s">
              <span class="cert-date">May 2024</span>
              <div class="cert-body">
                <span class="cert-name">CCNP Routing & Switching</span>
                <span class="cert-issuer">Cisco Certified Network Professional</span>
              </div>
            </div>

            <div class="cert-item reveal" style="--delay: 0.72s">
              <span class="cert-date">Apr 2024</span>
              <div class="cert-body">
                <span class="cert-name">DevNet Specialist</span>
                <span class="cert-issuer">Enterprise Automation and Programmability</span>
              </div>
            </div>

            <div class="cert-item reveal" style="--delay: 0.77s">
              <span class="cert-date">Mar 2024</span>
              <div class="cert-body">
                <span class="cert-name">Cisco Meraki Network Associate</span>
                <span class="cert-issuer">Cisco Certified</span>
              </div>
            </div>

            <div class="cert-item reveal" style="--delay: 0.82s">
              <span class="cert-date">Mar 2022</span>
              <div class="cert-body">
                <span class="cert-name">ITIL® Foundation</span>
                <span class="cert-issuer">IT Service Management</span>
              </div>
            </div>

          </div>
        </div>
      </section>

      <!-- Skills strip -->
      <section class="skills-section reveal" style="--delay: 0.88s">
        <div class="skills-inner">
          <span class="section-label">Skills</span>
          <div class="skills-list">
            <span class="skill">HTML / CSS</span>
            <span class="skill">JavaScript</span>
            <span class="skill">Python</span>
            <span class="skill">C# / Java</span>
            <span class="skill">Docker</span>
            <span class="skill">Kubernetes</span>
            <span class="skill">Ansible</span>
            <span class="skill">GitLab</span>
            <span class="skill">Grafana</span>
            <span class="skill">Dynatrace</span>
            <span class="skill">Zabbix</span>
            <span class="skill">Linux</span>
            <span class="skill">Windows</span>
            <span class="skill">MSSQL / MySQL</span>
          </div>
        </div>
      </section>

      <!-- Languages -->
      <section class="langs-section reveal" style="--delay: 0.94s">
        <div class="langs-inner">
          <span class="section-label">Languages</span>
          <div class="langs-grid">
            <div class="lang-item">
              <span class="lang-name">German</span>
              <span class="lang-level">Native</span>
              <div class="lang-bar"><div class="lang-fill" style="--pct: 100%"></div></div>
            </div>
            <div class="lang-item">
              <span class="lang-name">English</span>
              <span class="lang-level">Fluent</span>
              <div class="lang-bar"><div class="lang-fill" style="--pct: 92%"></div></div>
            </div>
            <div class="lang-item">
              <span class="lang-name">Italian</span>
              <span class="lang-level">Proficient</span>
              <div class="lang-bar"><div class="lang-fill" style="--pct: 65%"></div></div>
            </div>
            <div class="lang-item">
              <span class="lang-name">French</span>
              <span class="lang-level">Basic</span>
              <div class="lang-bar"><div class="lang-fill" style="--pct: 25%"></div></div>
            </div>
          </div>
        </div>
      </section>

    </main>

    <Footer />
  </body>
</html>

<style>
  :root {
    --cream:      #f7f5f0;
    --ink:        #1a1814;
    --muted:      #7a7672;
    --accent:     #c8540a;
    --border:     rgba(26,24,20,.1);
    --radius:     6px;
    --ff-display: 'Cormorant Garamond', Georgia, serif;
    --ff-body:    'DM Sans', system-ui, sans-serif;
  }

  *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

  body {
    background: var(--cream);
    color: var(--ink);
    font-family: var(--ff-body);
    font-size: 15px;
    line-height: 1.7;
    -webkit-font-smoothing: antialiased;
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
  }

  main {
    flex: 1;
    width: 100%;
    padding-top: 56px;
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(16px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  .reveal {
    opacity: 0;
    animation: fadeUp .65s cubic-bezier(.22,.68,0,1.2) forwards;
    animation-delay: var(--delay, 0s);
  }

  /* ── Hero ───────────────────────────────────── */
  .page-hero {
    border-bottom: 1px solid var(--border);
    padding: 3.5rem 2rem 2.5rem;
  }

  .page-hero-inner {
    max-width: 720px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: .4rem;
    font-size: .72rem;
    font-weight: 500;
    letter-spacing: .1em;
    text-transform: uppercase;
    color: var(--muted);
    text-decoration: none;
    margin-bottom: 1.5rem;
    transition: color .2s;
  }

  .back-link:hover { color: var(--ink); }

  .label {
    font-size: .7rem;
    font-weight: 500;
    letter-spacing: .18em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: .75rem;
  }

  .page-title {
    font-family: var(--ff-display);
    font-size: clamp(2.6rem, 7vw, 4rem);
    font-weight: 300;
    line-height: 1.05;
    margin-bottom: .9rem;
  }

  .page-sub {
    font-size: .9rem;
    color: var(--muted);
  }

  /* ── Timeline ───────────────────────────────── */
  .timeline-section {
    padding: 3rem 2rem 1rem;
  }

  .timeline-inner {
    max-width: 720px;
    margin: 0 auto;
  }

  .timeline-item {
    display: grid;
    grid-template-columns: 160px 1fr;
    gap: 0 2rem;
    position: relative;
    padding-bottom: 2.5rem;
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    left: 160px;
    top: 8px;
    bottom: 0;
    width: 1px;
    background: var(--border);
    transform: translateX(calc(-50% + 1rem));
  }

  .timeline-item:last-child::before { display: none; }

  .timeline-meta {
    display: flex;
    flex-direction: column;
    gap: .2rem;
    text-align: right;
    padding-top: .1rem;
  }

  .timeline-period {
    font-size: .72rem;
    font-weight: 500;
    letter-spacing: .04em;
    color: var(--ink);
  }

  .timeline-location {
    font-size: .68rem;
    color: var(--muted);
  }

  .timeline-content {
    display: flex;
    gap: 1.25rem;
    align-items: flex-start;
  }

  .timeline-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--cream);
    border: 2px solid var(--border);
    flex-shrink: 0;
    margin-top: .35rem;
  }

  .timeline-dot.accent {
    background: var(--accent);
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(200,84,10,.12);
  }

  .timeline-body { flex: 1; }

  .timeline-badge {
    display: inline-block;
    font-size: .62rem;
    font-weight: 600;
    letter-spacing: .12em;
    text-transform: uppercase;
    color: var(--accent);
    background: rgba(200,84,10,.08);
    border: 1px solid rgba(200,84,10,.2);
    padding: .15rem .55rem;
    border-radius: 999px;
    margin-bottom: .6rem;
  }

  .timeline-header { margin-bottom: .65rem; }

  .timeline-role {
    font-size: 1rem;
    font-weight: 500;
    color: var(--ink);
    margin-bottom: .1rem;
  }

  .timeline-degree {
    display: block;
    font-size: .82rem;
    color: var(--ink);
    opacity: .7;
    margin-bottom: .1rem;
  }

  .timeline-company {
    display: block;
    font-size: .75rem;
    color: var(--muted);
  }

  .timeline-desc {
    font-size: .88rem;
    color: var(--ink);
    opacity: .85;
    margin-bottom: .9rem;
    line-height: 1.65;
  }

  .timeline-desc em { font-style: italic; }

  .timeline-tags {
    display: flex;
    flex-wrap: wrap;
    gap: .35rem;
  }

  .tag {
    font-size: .66rem;
    font-weight: 400;
    letter-spacing: .07em;
    text-transform: uppercase;
    color: var(--muted);
    border: 1px solid var(--border);
    padding: .2rem .55rem;
    border-radius: 999px;
  }

  /* ── Section label ───────────────────────────── */
  .section-label {
    display: block;
    font-size: .7rem;
    font-weight: 500;
    letter-spacing: .18em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 1.5rem;
  }

  /* ── Certifications ──────────────────────────── */
  .certs-section {
    padding: 1rem 2rem 2rem;
    border-top: 1px solid var(--border);
  }

  .certs-inner {
    max-width: 720px;
    margin: 0 auto;
    padding-top: 2.5rem;
  }

  .certs-grid {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .cert-item {
    display: grid;
    grid-template-columns: 90px 1fr;
    gap: 0 1.5rem;
    align-items: start;
    padding: .9rem 0;
    border-bottom: 1px solid var(--border);
  }

  .cert-item:first-child { border-top: 1px solid var(--border); }

  .cert-date {
    font-size: .7rem;
    color: var(--muted);
    letter-spacing: .04em;
    padding-top: .1rem;
  }

  .cert-body { display: flex; flex-direction: column; gap: .1rem; }

  .cert-name {
    font-size: .9rem;
    font-weight: 500;
    color: var(--ink);
  }

  .cert-issuer {
    font-size: .75rem;
    color: var(--muted);
  }

  /* ── Skills ──────────────────────────────────── */
  .skills-section {
    padding: 1rem 2rem 1.5rem;
    border-top: 1px solid var(--border);
  }

  .skills-inner {
    max-width: 720px;
    margin: 0 auto;
    padding-top: 2.5rem;
  }

  .skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: .5rem;
  }

  .skill {
    font-size: .75rem;
    font-weight: 400;
    letter-spacing: .06em;
    color: var(--ink);
    border: 1px solid var(--border);
    padding: .3rem .75rem;
    border-radius: 999px;
    transition: border-color .2s, color .2s;
  }

  .skill:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  /* ── Languages ───────────────────────────────── */
  .langs-section {
    padding: 1rem 2rem 4rem;
    border-top: 1px solid var(--border);
  }

  .langs-inner {
    max-width: 720px;
    margin: 0 auto;
    padding-top: 2.5rem;
  }

  .langs-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.25rem 3rem;
  }

  .lang-item { display: flex; flex-direction: column; gap: .4rem; }

  .lang-name {
    font-size: .85rem;
    font-weight: 500;
    color: var(--ink);
  }

  .lang-level {
    font-size: .72rem;
    color: var(--muted);
    letter-spacing: .06em;
    margin-bottom: .1rem;
  }

  .lang-bar {
    height: 2px;
    background: var(--border);
    border-radius: 999px;
    overflow: hidden;
  }

  .lang-fill {
    height: 100%;
    width: var(--pct);
    background: var(--accent);
    border-radius: 999px;
  }

  /* ── Responsive ─────────────────────────────── */
  @media (max-width: 600px) {
    .timeline-item {
      grid-template-columns: 1fr;
    }

    .timeline-item::before {
      display: none;
    }

    .timeline-meta {
      text-align: left;
      flex-direction: row;
      gap: .5rem;
      align-items: center;
      margin-bottom: .75rem;
    }

    .langs-grid { grid-template-columns: 1fr; }
    .page-hero { padding: 3rem 1.25rem 2rem; }
    .timeline-section,
    .certs-section,
    .skills-section,
    .langs-section { padding-left: 1.25rem; padding-right: 1.25rem; }
  }
</style>
