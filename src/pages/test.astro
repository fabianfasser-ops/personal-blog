---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;1,400&family=DM+Mono:wght@300;400&display=swap" rel="stylesheet" />
    <style>
      :root {
        --ink: #111111;
        --paper: #f7f5f0;
        --muted: #888880;
        --accent: #111111;
        --line: rgba(0,0,0,0.1);
      }
      @media (prefers-color-scheme: dark) {
        :root {
          --ink: #e8e4dc;
          --paper: #0f0f0e;
          --muted: #666660;
          --accent: #e8e4dc;
          --line: rgba(255,255,255,0.08);
        }
      }

      * { box-sizing: border-box; }

      body {
        background-color: var(--paper);
        color: var(--ink);
        font-family: 'DM Mono', monospace;
        margin: 0;
        min-height: 100vh;
        transition: background 0.3s, color 0.3s;
      }

      .hero {
        min-height: calc(100vh - 120px);
        display: grid;
        grid-template-rows: 1fr auto;
        padding: clamp(3rem, 8vw, 7rem) clamp(1.5rem, 6vw, 6rem);
        border-bottom: 1px solid var(--line);
        position: relative;
        overflow: hidden;
      }

      /* Subtle grid texture */
      .hero::before {
        content: '';
        position: absolute;
        inset: 0;
        background-image:
          linear-gradient(var(--line) 1px, transparent 1px),
          linear-gradient(90deg, var(--line) 1px, transparent 1px);
        background-size: 60px 60px;
        pointer-events: none;
        opacity: 0.5;
      }

      .hero-content {
        position: relative;
        max-width: 900px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 2rem;
        animation: fadeUp 0.8s ease both;
      }

      .hero-eyebrow {
        font-size: 0.7rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--muted);
        font-weight: 300;
      }

      .hero-name {
        font-family: 'Playfair Display', serif;
        font-size: clamp(3.5rem, 10vw, 8rem);
        line-height: 0.95;
        font-weight: 400;
        letter-spacing: -0.02em;
        margin: 0;
      }

      .hero-name em {
        font-style: italic;
        color: var(--muted);
      }

      .hero-tagline {
        font-size: clamp(0.85rem, 2vw, 1rem);
        color: var(--muted);
        font-weight: 300;
        max-width: 480px;
        line-height: 1.7;
        border-left: 1px solid var(--line);
        padding-left: 1.5rem;
      }

      .hero-cta {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
        margin-top: 1rem;
      }

      .cta-primary {
        font-family: 'DM Mono', monospace;
        font-size: 0.75rem;
        letter-spacing: 0.12em;
        text-transform: uppercase;
        color: var(--paper);
        background: var(--ink);
        text-decoration: none;
        padding: 0.85rem 2rem;
        transition: opacity 0.2s;
      }

      .cta-primary:hover { opacity: 0.7; }

      .cta-secondary {
        font-family: 'DM Mono', monospace;
        font-size: 0.75rem;
        letter-spacing: 0.12em;
        text-transform: uppercase;
        color: var(--muted);
        text-decoration: none;
        padding: 0.85rem 0;
        border-bottom: 1px solid var(--line);
        transition: color 0.2s, border-color 0.2s;
      }

      .cta-secondary:hover {
        color: var(--ink);
        border-color: var(--ink);
      }

      .hero-footer {
        position: relative;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        padding-top: 3rem;
        font-size: 0.65rem;
        letter-spacing: 0.15em;
        text-transform: uppercase;
        color: var(--muted);
        font-weight: 300;
        animation: fadeUp 0.8s 0.2s ease both;
      }

      /* Sections */
      .section {
        padding: clamp(3rem, 6vw, 5rem) clamp(1.5rem, 6vw, 6rem);
        border-bottom: 1px solid var(--line);
      }

      .section-label {
        font-size: 0.65rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--muted);
        font-weight: 300;
        margin-bottom: 2.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .section-label::after {
        content: '';
        flex: 1;
        height: 1px;
        background: var(--line);
      }

      .about-text {
        font-size: clamp(1.1rem, 2.5vw, 1.6rem);
        font-family: 'Playfair Display', serif;
        font-weight: 400;
        line-height: 1.55;
        max-width: 720px;
        color: var(--ink);
      }

      .about-text em {
        font-style: italic;
        color: var(--muted);
      }

      /* Work grid */
      .work-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1px;
        background: var(--line);
        margin-top: 0;
      }

      .work-card {
        background: var(--paper);
        padding: 2rem 1.75rem;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        transition: background 0.2s;
        text-decoration: none;
        color: inherit;
      }

      .work-card:hover { background: var(--line); }

      .work-card-num {
        font-size: 0.65rem;
        letter-spacing: 0.15em;
        color: var(--muted);
      }

      .work-card-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.3rem;
        font-weight: 400;
        line-height: 1.2;
      }

      .work-card-desc {
        font-size: 0.75rem;
        color: var(--muted);
        line-height: 1.6;
        font-weight: 300;
      }

      .work-card-tag {
        font-size: 0.6rem;
        letter-spacing: 0.12em;
        text-transform: uppercase;
        color: var(--muted);
        margin-top: auto;
        padding-top: 1rem;
        border-top: 1px solid var(--line);
      }

      @keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to   { opacity: 1; transform: translateY(0); }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>

      <!-- Hero -->
      <section class="hero">
        <div class="hero-content">
          <p class="hero-eyebrow">Portfolio — 2025</p>
          <h1 class="hero-name">
            Your<br/><em>Name Here</em>
          </h1>
          <p class="hero-tagline">
            Designer & developer crafting thoughtful digital experiences.
            Based somewhere beautiful, working everywhere.
          </p>
          <div class="hero-cta">
            <a href="/blog" class="cta-primary">View Work</a>
            <a href="#contact" class="cta-secondary">Get in Touch →</a>
          </div>
        </div>
        <div class="hero-footer">
          <span>Available for projects</span>
          <span>Scroll to explore</span>
        </div>
      </section>

      <!-- About -->
      <section class="section">
        <p class="section-label">About</p>
        <p class="about-text">
          I build things for the web with a focus on <em>clarity, craft,</em>
          and meaningful detail. I believe the best interfaces are the ones
          that feel inevitable — as if they couldn't have been any other way.
        </p>
      </section>

      <!-- Work -->
      <section class="section" style="padding-left: 0; padding-right: 0; padding-bottom: 0;">
        <p class="section-label" style="padding: 0 clamp(1.5rem, 6vw, 6rem);">Selected Work</p>
        <div class="work-grid">
          <a href="/blog" class="work-card">
            <span class="work-card-num">01</span>
            <span class="work-card-title">Project One</span>
            <p class="work-card-desc">A short description of what this project is and why it matters.</p>
            <span class="work-card-tag">Web Design · Development</span>
          </a>
          <a href="/blog" class="work-card">
            <span class="work-card-num">02</span>
            <span class="work-card-title">Project Two</span>
            <p class="work-card-desc">Another engaging project with a clear problem and elegant solution.</p>
            <span class="work-card-tag">React · Astro</span>
          </a>
          <a href="/blog" class="work-card">
            <span class="work-card-num">03</span>
            <span class="work-card-title">Project Three</span>
            <p class="work-card-desc">Something you're proud of — the work that defines your style.</p>
            <span class="work-card-tag">Design System</span>
          </a>
        </div>
      </section>

    </main>
    <Footer />
  </body>
</html>
