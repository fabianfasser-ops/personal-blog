<style>
  :root {
    --cream:  #f7f5f0;
    --ink:    #1a1814;
    --muted:  #7a7672;
    --accent: #c8540a;
    --border: rgba(26,24,20,.1);
    --ff-body: 'DM Sans', system-ui, sans-serif;
  }

  footer {
    width: 100%;
    border-top: 1px solid var(--border);
    background: var(--cream);
    font-family: var(--ff-body);
  }

  .footer-inner {
    max-width: 1100px;
    margin: 0 auto;
    padding: 1.25rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .copyright {
    font-size: .72rem;
    font-weight: 400;
    letter-spacing: .08em;
    text-transform: uppercase;
    color: var(--muted);
  }

  .divider-dot {
    width: 3px;
    height: 3px;
    border-radius: 50%;
    background: var(--border);
  }

  .social-links {
    display: flex;
    align-items: center;
    gap: .85rem;
  }

  .social-links a {
    color: var(--muted);
    display: flex;
    align-items: center;
    transition: color .2s, transform .2s;
  }

  .social-links a:hover {
    color: var(--accent);
    transform: translateY(-1px);
  }
</style>
