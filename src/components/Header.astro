<style>
  :root {
    --cream:   #f7f5f0;
    --ink:     #1a1814;
    --muted:   #7a7672;
    --accent:  #c8540a;
    --border:  rgba(26,24,20,.1);
    --ff-body: 'DM Sans', system-ui, sans-serif;
  }

  *, *::before, *::after {
    box-sizing: border-box;
  }

  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    margin: 0;
    padding: 0;
    z-index: 50;
    background: rgba(247,245,240,.88);
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);
    border-bottom: 1px solid var(--border);
    font-family: var(--ff-body);
  }

  nav {
    padding: 0 2rem;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1.5rem;
  }

  /* Site title — left */
  .site-title {
    font-size: .78rem;
    font-weight: 500;
    letter-spacing: .12em;
    text-transform: uppercase;
    color: var(--ink);
    text-decoration: none;
    white-space: nowrap;
    transition: color .2s;
  }

  .site-title:hover {
    color: var(--accent);
  }

  /* Nav links — center */
  .internal-links {
    display: flex;
    align-items: center;
    gap: .15rem;
  }

  .internal-links :global(a) {
    font-size: .78rem;
    font-weight: 400;
    letter-spacing: .08em;
    text-transform: uppercase;
    color: var(--muted);
    text-decoration: none;
    padding: .35rem .65rem;
    border-radius: 4px;
    border-bottom: none;
    transition: color .2s, background .2s;
  }

  .internal-links :global(a:hover) {
    color: var(--ink);
    background: rgba(26,24,20,.05);
  }

  .internal-links :global(a.active) {
    color: var(--accent);
    background: rgba(200,84,10,.06);
  }

  /* ── Dropdown group ─────────────────────────── */
  .nav-group {
    position: relative;
    display: flex;
    align-items: center;
  }

  .dropdown {
    position: absolute;
    top: calc(100% + .5rem);
    left: 50%;
    transform: translateX(-50%);
    background: rgba(247,245,240,.97);
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);
    border: 1px solid var(--border);
    border-radius: 6px;
    padding: .3rem;
    min-width: 130px;
    display: flex;
    flex-direction: column;
    gap: .1rem;
    box-shadow: 0 8px 24px rgba(0,0,0,.07);
    /* Hidden by default */
    opacity: 0;
    pointer-events: none;
    transform: translateX(-50%) translateY(-4px);
    transition: opacity .18s ease, transform .18s ease;
  }

  /* Small arrow */
  .dropdown::before {
    content: '';
    position: absolute;
    top: -5px;
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 8px;
    height: 8px;
    background: rgba(247,245,240,.97);
    border-left: 1px solid var(--border);
    border-top: 1px solid var(--border);
  }

  .nav-group:hover .dropdown,
  .nav-group:focus-within .dropdown {
    opacity: 1;
    pointer-events: auto;
    transform: translateX(-50%) translateY(0);
  }

  .dropdown-item {
    font-size: .72rem;
    font-weight: 400;
    letter-spacing: .09em;
    text-transform: uppercase;
    color: var(--muted);
    text-decoration: none;
    padding: .4rem .7rem;
    border-radius: 4px;
    transition: color .15s, background .15s;
    white-space: nowrap;
  }

  .dropdown-item:hover {
    color: var(--accent);
    background: rgba(200,84,10,.06);
  }

  /* Social icons — right */
  .social-links {
    display: flex;
    align-items: center;
    gap: .75rem;
  }

  .social-links a {
    color: var(--muted);
    display: flex;
    align-items: center;
    transition: color .2s, transform .2s;
  }

  .social-links a:hover {
    color: var(--ink);
    transform: translateY(-1px);
  }

  @media (max-width: 480px) {
    .social-links { display: none; }
  }
</style>
